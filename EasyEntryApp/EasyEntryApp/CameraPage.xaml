<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyEntryApp.CameraPage"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Readers;assembly=ZXing.Net.MAUI"
             xmlns:controls="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             Title="Scan">
    <VerticalStackLayout>
        <Label 
            Text="Scanner"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <controls:CameraBarcodeReaderView
            x:Name="cameraBarcodeReaderView"
            BarcodesDetected="BarcodesDetected" />
    </VerticalStackLayout>
</ContentPage>
